<style>
	.logo-image{
	   width: 46px;
	   height: 46px;
	   border-radius: 50%;
	   overflow: hidden;
	   margin-top: -6px;
   }
</style>

<h2 style="color:#171796; margin-top: 40px; margin-left: 40px"><%=investigador.nombre%></h2>
<p style="margin-left: 40px"><%=investigador.descripcion%></p>
<h4 style="margin-top: 40px; margin-left: 40px">Medios de contacto</h4>

<div class="container" style="margin-top: 30px; margin-left: 40px">
	<div class="row">
	  <div class="col-sm">
		<div class="card">
			<div class="card-header">
				Correo electrónico
			</div>
			<div class="card-body">
			  <p class="card-text"><%=investigador.correo%></p>
			</div>
		</div>
	  </div>
	  <div class="col-sm">
		<div class="card">
			<div class="card-header">
				Telefono
			</div>
			<div class="card-body">
			  <p class="card-text"><%=investigador.telefono%></p>
			</div>
		</div>
	  </div>
	  <div class="col-sm">
		<div class="card">
			<div class="card-header">
				Ubicación
			</div>
			<div class="card-body">
			  <p class="card-text"><%=investigador.ubicacion%></p>
			</div>
	    </div>
	  </div>
	</div>
  </div>

<h5 style="margin-top: 40px; margin-left: 40px">Departamentos</h5>
<div>
<% investigador.topicos.forEach(topico => { %>
<div style="margin-left: 40px">
	<a href="/departamento/<%= topico %>"><%= topico %> </a>
</div>
<% }) %>
<div>

<h5 style="margin-top: 40px; margin-left: 40px">Proyectos</h5>
<div style="margin-left: 40px">
<% investigador.proyectos.forEach(proyecto => { %>
<div>
	<a href="/proyecto/<%= proyecto.nombre %>"> <%= proyecto.nombre %>
</div>
<% }) %>
<div>
<div style="margin-bottom: 60px"></div>